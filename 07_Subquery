#  Average amount paid by the top 5 customers.
SELECT AVG(total_amount_paid) AS "average"
FROM
(SELECT A.customer_id, A.first_name AS "customer first name", A.last_name AS "customer last name",
	   C.city,
	   D.country,
SUM(e.amount) AS "total_amount_paid"	   
FROM customer A
INNER JOIN address B ON A.address_id=B.address_id
INNER JOIN city C ON B.city_id=C.city_id
INNER JOIN country D ON C.country_id=D.country_id
INNER JOIN payment E ON A.customer_id=E.customer_id
WHERE city IN ('Aurora', 'Acua', 'Citrus Heights', 'Iwaki',
				  'Ambattur', 'Shanwei', 'SO Leopoldo', 'Teboksary', 'Tianjin', 'Cianjur')
GROUP BY A.customer_id, first_name, last_name, city, country
ORDER BY total_amount_paid DESC
LIMIT 5) AS total_amount_paid;
